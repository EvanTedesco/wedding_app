<div class=".table-responsive">
  <div class="table-container">
    <div class="table-row">
      <div class="col-md-12">
        <h1 class="text-center">
          Comments:
        </h1>
      </div>
      <div id="no-more-tables">
        <table class="col-md-12 table-bordered table-striped table-condensed cf">
          <thead class="cf">
          <tr>
            <th>Name</th>
            <th>Comment</th>
          </tr>
          </thead>
          <tbody>
          <% @users.each do |user| %>
            <% if user.comments && user.comments != '' %>
              <tr>
                <td class="col-md-3" data-title="Name"><%= user.name %></td>
                <td class="col-md-9" data-title="Email"><%= user.comments %></td>
              </tr>
            <% end %>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>