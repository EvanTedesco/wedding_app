<div class="fullscreen-bg">

  <div class="container">
    <div class="row vertical-offset-100">
      <div class="col-md-4 col-md-offset-4">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Please set your password</h3>
          </div>
          <div class="panel-body">
            <div class="error">
              <% if @user.errors.any? %>
                <% @user.errors.full_messages.each do |message| %>
                  <ul>
                    <li><%= message %></li>
                  </ul>
                <% end %>
              <% end %>
            </div>

            <%= form_for @user, :as => :user, :url => password_resets_path, :method => :put do |f| %>
              <%= f.hidden_field :email %>

          <fieldset>
                <div class="form-group">
                  <%= f.password_field :password, placeholder: 'Password', class: "form-control" %>
                </div>
                <div class="form-group">
                  <%= f.password_field :password_confirmation, placeholder: 'Password Confirmation', class: "form-control" %>
                </div>
                <div class="checkbox">
                  <label>
                    <input name="remember" type="checkbox" value="Remember Me"> Remember Me
                  </label>
                </div>
                <%= f.submit 'Login', class: "btn btn-lg btn-success btn-block" %>
              </fieldset>
              </form>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>