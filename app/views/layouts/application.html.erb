<!DOCTYPE html>
<html>
<head>
  <title>WeddingApp</title>
  <%= stylesheet_link_tag 'application', "//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css", media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', "//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js", 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body>
<header>
  <% if session[:user_id] == nil %>
      <%= link_to 'Login', new_session_path %>
  <% else %>
      <%= link_to 'Logout', "/sessions/#{current_user.id}", method: :delete %>
      <%= link_to 'RSVP', "/users/#{current_user.id}/rsvps/new" %>
  <% end %>

  <%= link_to 'Admin', admins_path %>

  <%= link_to 'Home', root_path %>

</header>


<div id="content-wrapper">

  <%= yield %>
</div>
</body>
</html>
