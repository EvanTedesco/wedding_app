<% if flash[:login_failure] %>
    <%= flash[:login_failure] %>
    <% end %>
<%= form_for @user, :url => {:action => 'create'} do |f| %>
    <%= f.label :email %>
    <%= f.email_field :email %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.submit 'Login' %>
<% end %>
