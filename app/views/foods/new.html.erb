<div class="fullscreen-bg">
  <div class="edit-food-container">
    <h1>Add a food item</h1>
    <%= form_for @food do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>
        <br>

        <%= f.label :description %>
        <%= f.text_area :description, class:'form-control' %>
        <%= f.submit 'Add food' %>

    <% end %>
  </div>
</div>