<div class="fullscreen_bg">
  <div class="edit-food-container">

    <h1>Edit: <%= @food.name %></h1>
    <%= form_for @food do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name, placeholder: @food.name %>
        <br>
        <%= f.label :description %>
        <%= f.text_area :description, placeholder: @food.description, class: 'form-control' %>
        <%= f.submit 'Edit' %>
    <% end %>
  </div>
</div>